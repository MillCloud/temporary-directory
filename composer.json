{
    "name": "millcloud/temporary-directory",
    "description": "Easily create, use and destroy temporary directories",
    "license": "MIT",
    "keywords": [
        "millcloud",
        "php",
        "temporary-directory"
    ],
    "authors": [
        {
            "name": "Alex Vanderbist",
            "email": "alex@millcloud.be",
            "homepage": "https://millcloud.be",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/millcloud/temporary-directory",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "MillCloud\\TemporaryDirectory\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MillCloud\\TemporaryDirectory\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
